<!-- Untabbed Message Window - shown when a message window is detached from a container -->

<component name="message-untabbed" minx="301" miny="200" defaultx="415" defaulty="520">
	&resize;
	&windowborder;
	&minmaxclosehide;

	<icontrol source="avatar-switcher" name="buddy-icon" visible="1">
		<rect>
			<left num="8" width="0"/>
			<top num="6" height="0"/>
			<right num="24" width="0"/>
			<bottom num="22" height="0"/>
		</rect>
	</icontrol>

	<icontrol source="medium-status" name="status-icon" visible="1">
		<rect>
			<left num="26" width="0"/>
			<top num="6" height="0"/>
			<right num="42" width="0"/>
			<bottom num="22" height="0"/>
		</rect>
	</icontrol>
	
	<icontrol source="tab-name" name="channel" visible="1">
		<rect>
			<left num="44" width="0"/>
			<top num="6" height="0"/>
			<right num="137" width="1"/>
			<bottom num="22" height="0"/>
		</rect>
	</icontrol>

	<frame source="message" name="message" visible="1">
		<rect>
			<left num="1" width="0"/>
			<top num="26" height="0"/>
			<right num="1" width="1"/>
			<bottom num="1" height="1"/>
		</rect>
	</frame>

</component>

